modules = ["c-clang14", "nodejs-20", "web", "python-3.11"]
run = "python3 main.py"

[nix]
channel = "stable-25_05"
packages = ["cacert", "cargo", "gh", "libiconv", "libuv", "libxcrypt", "magma", "openssl", "pkg-config", "rustc"]

[deployment]
run = ["export", "DATABASE_URI=$DATABASE_URL", "&&", "python3", "main.py"]
deploymentTarget = "vm"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Run Bot"
author = 18635477
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Telegram Bot"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DATABASE_URI=\"$DATABASE_URL\" && python3 main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Restart Bot"
author = 47389467
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f python3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DATABASE_URI=\"$DATABASE_URL\" && python3 main.py"

