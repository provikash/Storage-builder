
# Mother Bot + Clone System Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED CONFIGURATION (Must be set)
# ===========================================

# Telegram API Credentials (get from https://my.telegram.org)
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token_here

# MongoDB Database URL (recommended: MongoDB Atlas free tier)
DATABASE_URI=mongodb+srv://username:password@cluster.mongodb.net/botname
DATABASE_NAME=mother_bot

# Admin User IDs (space separated, get from /id command)
ADMINS=123456789 987654321

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Force Subscribe Channels (space separated channel IDs)
FORCE_SUB_CHANNELS=-1001234567890 -1001234567891

# Main Channel ID for file storage
CHANNEL_ID=-1001234567890

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Environment (development/production)
ENVIRONMENT=production

# Logging Level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Security Settings
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=20
MAX_CLONE_REQUESTS_PER_DAY=5
CLONE_REQUEST_COOLDOWN_HOURS=24

# Monitoring Settings
HEALTH_CHECK_ENABLED=true
SYSTEM_MONITORING_ENABLED=true

# Web Interface Settings
WEB_SERVER_ENABLED=true
WEB_SERVER_PORT=5000

# Error Handling
DETAILED_ERRORS=false
ERROR_LOGS_ENABLED=true

# ===========================================
# ADVANCED SETTINGS (Optional)
# ===========================================

# Database Connection Pool Size
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=1

# Session Settings
SESSION_TIMEOUT_HOURS=2
MAX_CONCURRENT_SESSIONS=100

# File Upload Limits
MAX_FILE_SIZE_MB=2000
ALLOWED_FILE_TYPES=all

# Clone System Settings
MAX_CLONES_PER_USER=3
CLONE_EXPIRY_DAYS=30

# Backup Settings
AUTO_BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
